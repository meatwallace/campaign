{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "vitest",
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node"
    ]
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "vitest.setup.ts",
    "app/**/*.test.ts",
    "app/**/*.test.tsx"
  ]
}
